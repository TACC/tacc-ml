ARG FROM_TAG
FROM tacc/tacc-ml:$FROM_TAG

########################################
# BUILD Args
########################################

ARG VER
ARG REL
ARG TF
ARG PT
ARG CV

########################################
# Configure ENV
########################################

RUN RF=/etc/${REL}-release; echo ${VER} > $RF && chmod a+r $RF

########################################
# Install TF, PT, and CUDA
########################################

RUN conda install -q --yes --no-update-deps \
        pillow \
        h5py \
        matplotlib \
        mock \
        scipy \
        scikit-learn \
        pandas \
        cython \
	tensorflow-gpu=${TF} \
	"cudatoolkit<${CV}" \
    && docker-clean && rm -rf ${CONDA_DIR}/pkgs/*

RUN conda install -q --yes \
        ipykernel \
        jupyter \
    && docker-clean && rm -rf ${CONDA_DIR}/pkgs/*

# Install pytorch
RUN conda install -q --yes -c pytorch \
	pytorch=${PV} \
	torchvision \
    torchaudio \
    && docker-clean && rm -rf ${CONDA_DIR}/pkgs/*

# Install Transformers library
RUN conda install -q --yes --no-update-deps -c conda-forge \
    transformers \
    && docker-clean && rm -rf ${CONDA_DIR}/pkgs/*

# Create ipython kernel
RUN python -m ipykernel.kernelspec
